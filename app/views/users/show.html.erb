<div class="new-main">
  <div class="new-content">
    <p class="page-title">
      My page
    </p>
    <h1 class="subtitle">
      マイページ
    </h1>
  </div>
  <div class="wide-content-article">
    <div class="user-content">
      <div class="user-page">
        <h1 class="user-page-title">
          自己紹介
        </h1>
        <p class="user-edit-space">
          <%= link_to '編集',edit_user_path(current_user), class: "user-edit-btn" %>
        </p>
        <div class="user-image-space">
          <div class="user-items">
          <% unless @user.image.present? %>
            画像を設定してください
          <% else %>
            <%= image_tag @user.image, class: "user-image" %>
          <% end %>
          </div>
          <ul class="user-information">
            <li class="name user-core"><span class="topic">名前：</span><%= @user.name %></li>
            <li class="from user-core"><span class="topic">出身：</span><%= @user.from %></li>
            <li class="age user-core"><span class="topic">年齢：</span><%= @user.age %></li>
          </ul>
      </div>
    </div>
  </div>
</div>
<div class="main">
  <div class="main-content">
     <div class="new-wide-content">
      <div class="loop">
         <%= render partial: "spots/spot", collection: @spots %>
      </div>
      <%= paginate @spots %>
     </div>
  </div>
</div> 